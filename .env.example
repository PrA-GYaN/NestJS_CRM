# Master Database (stores tenant information)
MASTER_DATABASE_URL="postgresql://user:password@localhost:5432/crm_master"

# Tenant Database Configuration (for seeding demo tenant)
TENANT_DB_HOST=localhost
TENANT_DB_PORT=5432
TENANT_DB_USER=postgres
TENANT_DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRATION="1d"

# Application
PORT=3000
NODE_ENV=development

# Encryption Key for tenant DB credentials (must be 32 characters)
ENCRYPTION_KEY="your-encryption-key-32-chars-min"

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@example.com

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
